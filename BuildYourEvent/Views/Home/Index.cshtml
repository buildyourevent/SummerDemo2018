@model IEnumerable<BuildYourEvent.Models.Venue_Types>
@{
    Layout = "/Views/Shared/_Layout.cshtml";

}
    <div class="container" id="photo">
        <div class="centered">
            <form class="form-inline" asp-action="Results" enctype="multipart/form-data">
                <input type="hidden" id="fromResults" name="fromResults" value="n" />
                <div class="form-group">
                    <input class="form-control" placeholder="Ottawa, ON" disabled>
                </div>
                <div class="form-group">
                    <select class="form-control 
                            
                            -sm custom-select" name="venueTypeId">
                        <option selected disabled>Select venue type</option>
                            @foreach (var type in Model)
                            {
                                <option value="@type.id">@type.name</option>
                            }
                    </select>
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>
        </div>
    </div>
    <br />
    <div class="container" id="calibriFont">
        <table class="table table-hover">
            <tr>
                <td>Simplifies the research</td>
                <td>Filter to meet your needs</td>
                <td>Book with ease!</td>
            </tr>
            <tr>
                <td>
                    One event builder to rule them all...
                </td>
                <td>
                    With many different options to choose from,
                    </br>
                    decide what you need at the venue
                </td>
                <td>
                    Booking with your venue has never been easier!
                    </br>
                    Build Your Event does all the heavy lifting.
                </td>
            </tr>
        </table>
    </div>
<br/>
    <div class="container-fluid" id="calibriFont">
        <div class="row">
            <div class="col-md-3">
                <img src="~/Images/purpleroom.jpg" height="250" width="350">
                <div class="caption">
                    <h3>The Carlu</h3>
                    <p>Originally opened in 1930 as “Eaton’s Seventh Floor,” The Carlu was designed by French architect Jacques Carlu.</p>
                </div>
            </div>
            <div class="col-md-3">
                <img src="~/Images/venue.jpg" height="250" width="350">
                <div class="caption">
                    <h3>Ottawa Village Forest</h3>
                    <p>Have your breath thoroughly taken away by the Ottawa Village Forest. </p>
                </div>
            </div>
            <div class="col-md-3">
                <img src="~/Images/outside.jpg" height="250" width="350">
                <div class="caption">
                    <h3>Palm Tree</h3>
                    <p>Our magnifique lush gardens offer endless possibilities and the perfect backdrop for outdoor events. </p>
                </div>
            </div>
            <div class="col-md-3">
                <img src="~/Images/event-venue.jpg" height="250" width="350">
                <div class="caption">
                    <h3>Wedding Hall</h3>
                    <p>A small intimate romatic setting for a wedding. </p>
                </div>
            </div>

        </div>
    </div>
<script>
    $('.dropdown-menu').on('click', 'a', function () {
        var text = $(this).html();
        var htmlText = text + ' <span class="caret"></span>';
        $(this).closest('.dropdown').find('.dropdown-toggle').html(htmlText);
    });
</script>